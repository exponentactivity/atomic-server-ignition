variant: fcos
version: 1.6.0
systemd:
  units:
    - name: serial-getty@tty1.service
      dropins:
        - name: autologin-core.conf
          contents: |
            [Service]
            TTYVTDisallocate=no
            ExecStart=
            ExecStart=-/usr/sbin/agetty --autologin core --noclear %I $TERM
